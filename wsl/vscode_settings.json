{
	"window.titleBarStyle": "custom",
	"window.restoreFullscreen": true,
	"window.density.editorTabHeight": "compact",

	"explorer.confirmDelete": false,

	"workbench.colorTheme": "Aura Soft Dark (Soft Text)",
	"workbench.iconTheme": "vscode-icons",
	"workbench.productIconTheme": "fluent-icons",
	"workbench.list.horizontalScrolling": true,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.decorations.badges": true,
	"workbench.editor.decorations.colors": true,
	"workbench.editor.wrapTabs": true,

	"editor.minimap.enabled": true,
	"editor.renderControlCharacters": true,
	"editor.renderWhitespace": "selection",
	"editor.fontFamily": "'JetBrainsMono Nerd Font', 'FiraCode Nerd Font Mono', 'Sarasa Mono SC', '等距更纱黑体 SC', 'Noto Sans Mono CJK SC'",
	"editor.fontLigatures": true,
	"editor.formatOnPaste": false,
	"editor.linkedEditing": true,
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": true,
	"editor.autoClosingBrackets": "always",
	"editor.autoClosingQuotes": "always",

	"diffEditor.hideUnchangedRegions.enabled": true,

	"extensions.closeExtensionDetailsOnViewChange": true,
	"extensions.ignoreRecommendations": true,

	"oneDarkPro.bold": true,

	"files.eol": "\n",
	"files.exclude": {
			"**/.classpath": true,
			"**/.project": true,
			"**/.settings": true,
			"**/.factorypath": true
	},

	"terminal.external.windowsExec": "wt.exe",
	"terminal.integrated.copyOnSelection": true,
	"terminal.integrated.tabs.enabled": true,

	// https://juejin.cn/post/7022720509875847182
	// npm i -D eslint eslint-config-airbnb-base eslint-plugin-import eslint-plugin-typescript eslint-plugin-vue husky sass stylelint stylelint-config-standard stylelint-scss typescript @typescript-eslint/eslint-plugin @typescript-eslint/parser vue-eslint-parser
	"editor.codeActionsOnSave": {
			"source.fixAll": true,
	},
	"eslint.validate": [
			"typescript",
			"typescriptreact",
			"javascript",
			"javascriptreact",
			"html",
			"vue"
	],
	"eslint.alwaysShowStatus": true,

	"stylelint.validate": [
			"css",
			"less",
			"postcss",
			"scss",
			"vue",
			"sass"
	],

	"typescript.tsdk": "node_modules/typescript/lib",

	"gitlens.keymap": "alternate",
	"gitlens.advanced.messages": {
			"suppressCommitHasNoPreviousCommitWarning": false,
			"suppressCommitNotFoundWarning": false,
			"suppressFileNotUnderSourceControlWarning": false,
			"suppressGitVersionWarning": false,
			"suppressLineUncommittedWarning": false,
			"suppressNoRepositoryWarning": false
	},

	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[javascript]": {
			"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[json]": {
			"editor.tabSize": 2,
			"editor.defaultFormatter": "vscode.json-language-features"
	},

	"dart.flutterSdkPath": "~\\scoop\\apps\\flutter\\current",

	"vs-kubernetes": {
		"vscode-kubernetes.minikube-path.windows": "~\\.vs-kubernetes\\tools\\minikube\\windows-amd64\\minikube.exe",
		"vscode-kubernetes.kubectl-path.windows": "~\\.vs-kubernetes\\tools\\kubectl\\kubectl.exe"
	},

	//go install -v golang.org/x/tools/cmd/goimports@latest
	"go.useLanguageServer": true,
	"go.toolsManagement.autoUpdate": true,
	"[go]": {
			"editor.defaultFormatter": "golang.go"
	},

	"[xml]": {
			"editor.defaultFormatter": "DotJoshJohnson.xml"
	},

	"redhat.telemetry.enabled": true,

	"svelte.enable-ts-plugin": true,

	"prettier.singleQuote": true,
	"prettier.useTabs": true,
	"prettier.tabWidth": 4,
	"prettier.printWidth": 120,

	"markdown.extension.print.theme": "dark",
	"markdown-preview-enhanced.enableExtendedTableSyntax": true,
	"markdown-preview-enhanced.enableHTML5Embed": true,
	"markdown-preview-enhanced.HTML5EmbedUseLinkSyntax": true,
	"markdown-preview-enhanced.mermaidTheme": "dark",
	"markdown-preview-enhanced.previewTheme": "one-dark.css",
	"markdown-preview-enhanced.revealjsTheme": "black.css",

	"powershell.integratedConsole.showOnStartup": false,
	"powershell.promptToUpdatePowerShell": false,

	"tabnine.experimentalAutoImports": true,

	"vsicons.dontShowNewVersionMessage": true,

	"innosetup.pathToIscc": "C:\\Program Files (x86)\\Inno Setup 6\\ISCC.exe",

	"shellcheck.exclude": [
			"1090",
			"1091",
			"1094",
			"2001",
			"2002",
			"2012",
			"2015",
			"2016",
			"2034",
			"2119",
			"2120",
			"2126",
			"2129",
			"2142",
			"2145",
			"2219"
	]
}