{
	"window.titleBarStyle": "custom",
	"window.restoreFullscreen": true,
	"window.density.editorTabHeight": "compact",

	"explorer.confirmDelete": false,
	"workbench.iconTheme": "vscode-icons",
	"workbench.productIconTheme": "fluent-icons",
	"workbench.list.horizontalScrolling": true,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.decorations.badges": true,
	"workbench.editor.decorations.colors": true,
	"workbench.editor.wrapTabs": true,

	"editor.minimap.enabled": true,
	"editor.renderControlCharacters": true,
	"editor.renderWhitespace": "selection",
	"editor.fontFamily": "'JetBrainsMono Nerd Font', 'FiraCode Nerd Font Mono', 'Sarasa Mono SC', '等距更纱黑体 SC', 'Noto Sans Mono CJK SC'",
	"editor.fontLigatures": true,
	"editor.formatOnPaste": false,
	"editor.linkedEditing": true,
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": true,
	"editor.autoClosingBrackets": "always",
	"editor.autoClosingQuotes": "always",

	"extensions.closeExtensionDetailsOnViewChange": true,
	"extensions.ignoreRecommendations": true,

	"files.eol": "\n",
	"files.exclude": {
			"**/.classpath": true,
			"**/.project": true,
			"**/.settings": true,
			"**/.factorypath": true
	},

	"terminal.external.windowsExec": "wt.exe",
	"terminal.integrated.copyOnSelection": true,
	"terminal.integrated.tabs.enabled": true,

	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit"
	},
	"eslint.validate": [
			"typescript",
			"typescriptreact",
			"javascript",
			"javascriptreact",
			"html",
			"vue"
	],
	"eslint.alwaysShowStatus": true,

	"stylelint.validate": [
			"css",
			"less",
			"postcss",
			"scss",
			"vue",
			"sass"
	],

	"typescript.tsdk": "node_modules/typescript/lib",

	"gitlens.keymap": "alternate",
	"gitlens.advanced.messages": {
			"suppressCommitHasNoPreviousCommitWarning": false,
			"suppressCommitNotFoundWarning": false,
			"suppressFileNotUnderSourceControlWarning": false,
			"suppressGitVersionWarning": false,
			"suppressLineUncommittedWarning": false,
			"suppressNoRepositoryWarning": false
	},

	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[javascript]": {
			"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[json]": {
			"editor.tabSize": 2,
			"editor.defaultFormatter": "vscode.json-language-features"
	},
	"dart.flutterSdkPath": "C:\\Users\\LiangMS\\scoop\\apps\\flutter\\current",
	"vs-kubernetes": {
		"vscode-kubernetes.minikube-path.windows": "C:\\Users\\LiangMS\\.vs-kubernetes\\tools\\minikube\\windows-amd64\\minikube.exe",
		"vscode-kubernetes.kubectl-path.windows": "C:\\Users\\LiangMS\\.vs-kubernetes\\tools\\kubectl\\kubectl.exe"
	},

	"go.useLanguageServer": true,
	"go.toolsManagement.autoUpdate": true,
	"go.formatTool": "gofumpt",
	"[go]": {
			"editor.defaultFormatter": "golang.go"
	},

	"[xml]": {
			"editor.defaultFormatter": "redhat.vscode-xml"
	},

	"[python]": {
		"editor.formatOnType": true
	},

	"[toml]": {
		"editor.defaultFormatter": "tamasfe.even-better-toml"
	},

	"redhat.telemetry.enabled": true,

	"svelte.enable-ts-plugin": true,

	"prettier.singleQuote": true,
	"prettier.useTabs": true,
	"prettier.tabWidth": 4,
	"prettier.printWidth": 120,

	"markdown.copyFiles.destination": {
		"*.md": "assets/${documentBaseName}-${fileName}"
	},

	"markdown.extension.print.theme": "dark",
	"markdown-preview-enhanced.enableExtendedTableSyntax": true,
	"markdown-preview-enhanced.enableHTML5Embed": true,
	"markdown-preview-enhanced.HTML5EmbedUseLinkSyntax": true,
	"markdown-preview-enhanced.mermaidTheme": "dark",
	"markdown-preview-enhanced.previewTheme": "one-dark.css",
	"markdown-preview-enhanced.revealjsTheme": "black.css",

	"powershell.integratedConsole.showOnStartup": false,
	"powershell.promptToUpdatePowerShell": false,

	"vsicons.dontShowNewVersionMessage": true,

	"innosetup.pathToIscc": "C:\\Program Files (x86)\\Inno Setup 6\\ISCC.exe",

	"shellcheck.exclude": [
			"1090",
			"1091",
			"1094",
			"2001",
			"2002",
			"2012",
			"2015",
			"2016",
			"2034",
			"2097",
			"2098",
			"2119",
			"2120",
			"2126",
			"2129",
			"2142",
			"2145",
			"2219"
	],
	"yaml.maxItemsComputed": 50000,
	"git.openRepositoryInParentFolders": "never",
	"tabnine.experimentalAutoImports": true,
	"database-client.autoSync": true,
	"workbench.colorTheme": "GitHub Dark",
	"docker.extension.dockerEngineAvailabilityPrompt": false,
	"js-unicode-preview.languages": [
		"json",
		"jsonc",
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	]
}